{
    // don't use the local cargo index, instead use the up-to-date one on the internet
    "crates.useLocalCargoIndex": false,
    "cSpell.words": [
        "Bincode",
        "bindgen",
        "brotli",
        "concatcp",
        "Leptos",
        "marzichat",
        "oneshot",
        "precompressed",
        "Redb",
        "rustc",
        "Stylesheet",
        "systemstat",
        "tarpc",
        "thiserror",
        "watchexec"
    ],
    // "rust-analyzer.cargo.features": [
    //     "hydrate",
    //     "ssr"
    // ],
    "rust-analyzer.linkedProjects": [
        "./Cargo.toml"
    ],
    "rust-analyzer.check.overrideCommand": [
        "just",
        "rust-analyzer-check"
    ],
    "rust-analyzer.cargo.extraEnv": {
        // doen't require a value, just needs to be present for rust analyzer to not complain
        // The actual value is defined in the justfile.
        "CSS_FILE_NAME": "",
    },
    "rust-analyzer.check.allTargets": false
}